{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				//"-Wall",
				//"-Werror",
				"-fdiagnostics-color=always",
				"-pg",
				//"-msse2",
				//"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-std=c++11",
				"-pthread",
				//"-B /home/user/miniconda3/envs/agp1/compiler_compat",
				//"-I${workspaceFolder}/eigen3",
				"-I/usr/local/lib/python3.8/dist-packages/eigency/eigen_3.2.8",
                "-I${workspaceFolder}/libigl/include",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}